rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Public read-only collection (if you want certain docs readable by everyone)
    match /public/{doc=**} {
      allow read: if true;
      allow write: if false;
    }

    // Users can read/write only their own user documents & subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}